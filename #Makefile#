LIBPATH = /lib

a.out :  sensor_interface.o main.o line_follow.o arm_control.o
	 g++ -LLIBPATH -o a.out  sensor_interface.o  main.o  line_follow.o  arm_control.o  -lrobot

sensor_interface.o: sensor_interface.cc
	 g++ -ansi -Wall -g -ILIBPATH -c sensor_interface.cc
main.o: main.cc main.h
	 g++ -ansi -Wall -g -ILIBPATH -c main.cc
line_follow.o: line_follow.cc
	 g++ -ansi -Wall -g -ILIBPATH -c line_follow.cc
arm_control.o: arm_control.cc
	 g++ -ansi -Wall -g -ILIBPATH -c arm_control.cc
